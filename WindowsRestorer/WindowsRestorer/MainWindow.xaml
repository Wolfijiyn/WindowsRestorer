<Window x:Class="WindowsRestorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsRestorer"
        mc:Ignorable="d"
        Title="Windows Restorer" Icon="Resources/reload.ico" Background="#3a3a3a" Height="760.55" Width="288.353" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <GroupBox x:Name="GraphicsGroupBox" Header="Graphic Drivers" Foreground="White" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Height="90" Width="254"/>
